<div id ="headerSection">
  <h2>Eat Da Burger</h2>
</div>

<div id="middleSection">

  <div class="leftMiddle">
    <div class="uneaten center">
      {{#each burger}}
        {{#unless devoured}}
          <li>
 {{burger_name}}
	<button class="burgerBlock" data-id="{{id}}" data-eaten="{{devoured}}">
		Order Again!
	</button>
</li>
        {{/unless}}
      {{/each}}
    </div>
  </div>

  <div class="centerMiddle">
    <div class="center">
      <input id="burgerName" type="text" placeholder="Name of Your Burger" data-eaten="0">
      <button id="addBurger" type="button">Add Your Burger</button>
    </div>
  </div>

  <div class="rightMiddle">
    <div class="eaten center">
      {{#each burger}}
        {{#if devoured}}
          <li>
 {{burger_name}}
	<button class="burgerBlock" data-id="{{id}}" data-eaten="{{devoured}}">
		{{#if devoured}}Eat Me !{{else}} Order Again!{{/if}}
	</button>
</li>
        {{/if}}
      {{/each}}
    </div>
  </div>

</div>

<div id ="footerSection">
  <p>Created By Morgan</p>
</div>
